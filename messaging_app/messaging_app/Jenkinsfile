pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials-id') // Jenkins credential ID
        DOCKER_IMAGE = "gabcares/messaging_app"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/D0nG4667/alx-backend-python.git',
                    credentialsId: 'dg-github-creds-id'
            }
        }

        stage('Verify Docker Connection') {
            steps {
                sh '''
                echo "Checking Docker connectivity..."
                docker info
                docker version
                '''
            }
        }

        stage('Build Production Docker Image') {
            steps {
                sh '''
                docker build -t $DOCKER_IMAGE:latest -f messaging_app/Dockerfile messaging_app
                '''
            }
        }

        stage('Push Production Docker Image') { 
            steps { 
                sh '''
                mkdir -p /tmp/docker-config
                echo $DOCKERHUB_CREDENTIALS_PSW | docker --config /tmp/docker-config login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                docker --config /tmp/docker-config push $DOCKER_IMAGE:latest
                ''' 
            } 
        }

        // Legacy compliance stage: install via pip3 for checker
        // stage('Install Dependencies (pip)') {
        //     steps {
        //         sh '''
        //             python3 -m venv venv
        //             . venv/bin/activate
        //             pip3 install -r messaging_app/requirements.txt
        //         '''
        //     }
        // }

        // Modern workflow: build Docker test image with uv + baked source
        stage('Build Docker image for testing') {
            steps {
                sh '''
                docker build -t $DOCKER_IMAGE:test -f $DOCKER_IMAGE/Dockerfile.test messaging_app
                '''
            }
        }

        stage('Run Tests in Container') {
            steps {
                sh '''
                # Run the test container with a fixed name
                docker run --name $DOCKER_IMAGE_test $DOCKER_IMAGE:test || true

                # Copy the JUnit XML report out of the container
                mkdir -p reports || true
                docker cp $DOCKER_IMAGE_test:/tmp/test-results.xml reports/test-results.xml || true

                # Remove the container after copying
                docker rm -f $DOCKER_IMAGE_test || true
                '''
            }
        }

        stage('Publish Report') {
            steps {
                // Parse test results into Jenkins UI
                junit 'reports/test-results.xml'
            }
        }
    }

    post {
        always {
            // Archive raw XML for download and traceability
            archiveArtifacts artifacts: 'reports/test-results.xml', fingerprint: true
        }
        success {
            echo '✅ Tests passed successfully!'
        }
        failure {
            echo '❌ Tests failed. Check reports.'
        }
    }
}

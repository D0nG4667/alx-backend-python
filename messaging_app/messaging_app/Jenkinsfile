pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/D0nG4667/alx-backend-python.git',
                    credentialsId: 'dg-github-creds-id'
            }
        }

        stage('Verify Docker Connection') {
            steps {
                sh '''
                echo "Checking Docker connectivity..."
                docker info
                docker version
                '''
            }
        }

        stage('Build Production Docker Image') {
            steps {
                sh '''
                docker build -t messaging_app:latest -f messaging_app/Dockerfile messaging_app
                '''
            }
        }

        // Legacy compliance stage: install via pip3 for checker
        // stage('Install Dependencies (pip)') {
        //     steps {
        //         sh '''
        //             python3 -m venv venv
        //             . venv/bin/activate
        //             pip3 install -r messaging_app/requirements.txt
        //         '''
        //     }
        // }

        // Modern workflow: build Docker test image with uv + baked source
        stage('Build Docker image for testing') {
            steps {
                sh '''
                docker build -t messaging_app:test -f messaging_app/Dockerfile.test messaging_app
                '''
            }
        }

        stage('Run Tests in Container') {
            steps {
                sh '''
                # Run the test container with a fixed name
                docker run --name messaging_app_test messaging_app:test || true

                # Copy the JUnit XML report out of the container
                docker cp messaging_app_test:/tmp/test-results.xml reports/test-results.xml || true

                # Remove the container after copying
                docker rm -f messaging_app_test || true
                '''
            }
        }

        stage('Publish Report') {
            steps {
                // Parse test results into Jenkins UI
                junit 'reports/test-results.xml'
            }
        }
    }

    post {
        always {
            // Archive raw XML for download and traceability
            archiveArtifacts artifacts: 'reports/test-results.xml', fingerprint: true
        }
        success {
            echo '✅ Tests passed successfully!'
        }
        failure {
            echo '❌ Tests failed. Check reports.'
        }
    }
}

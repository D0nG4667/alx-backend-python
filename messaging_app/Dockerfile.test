# ---- Stage 3: Test ----
# Copy production image    
FROM messaging_app:latest AS test

# Copy dependency manifests
COPY pyproject.toml uv.lock /app/

# Install dev dependencies (including pytest) with cache mount
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --group dev

# Ensure executables in .venv/bin are available
ENV PATH="/app/.venv/bin:$PATH"

# Default command runs pytest with JUnit XML report
CMD ["uv", "run", "pytest", "messaging_app", "--junitxml=/tmp/test-results.xml"]
